<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiAppGraphicsTest.Views.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiAppGraphicsTest.Controls"
             xmlns:vm="clr-namespace:MauiAppGraphicsTest.ViewModels"
             Title="Gestione Fiere">

    <ContentPage.BindingContext>
        <vm:MainPageViewModel />
    </ContentPage.BindingContext>

    <!-- NUOVO CONTROLLO STABILE -->
    <controls:StableExpanderView ItemsSource="{Binding Fiere}"
                                ToggleCommand="{Binding ToggleItemCommand}"
                                ItemClickCommand="{Binding ShowItemDetailsCommand}" />

</ContentPage>